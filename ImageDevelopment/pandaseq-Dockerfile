FROM alpine:3.10
RUN apk add git \
    && apk add bzip2-dev \
    && apk add zlib-dev \
    && apk add libtool \
    && apk add automake \
    && apk add autoconf \
    && apk add build-base \
    && git clone http://github.com/neufeld/pandaseq.git/ \
    && cd pandaseq && ./autogen.sh && ./configure && make && make install \
    && apk del git \
    && apk del automake \
    && apk del autoconf \
    && apk del build-base

